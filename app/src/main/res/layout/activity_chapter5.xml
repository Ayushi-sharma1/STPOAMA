        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="The provisions of section 360\n of the Code and the provisions of\n the Probation of Offenders Act, \n1958 (20 of 1958) shall not apply\n to any person above the age of\n eighteen years who is found guilty\n of having committed an offence under\n this Act."
            />





    </GridLayout>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20. Act to override other laws.—"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="@android:color/black"/>


    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rowCount="4"
        android:columnCount="3">

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="poonam"
            android:textColor="@android:color/transparent"
            />
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="(1)"
            android:textColor="@android:color/transparent"

            />
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Save as otherwise provided in this\n Act, the provisions of this Act shall\n have effect notwithstanding anything\n inconsistent therewith contained\n in any other law for the time being\n in force or any custom or usage or\n any instrument having effect by \nvirtue of any such law."
            />





    </GridLayout>
