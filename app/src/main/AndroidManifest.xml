    package="com.stpoa.ashit.stpoa">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SplashScreenActivity"
            android:label="@string/app_name"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".HomeActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".LoginActivity"
            android:label="Login"
            android:parentActivityName=".HomeActivity" />
        <activity
            android:name=".NewAccountActivity"
            android:label="Create New Account"
            android:parentActivityName=".LoginActivity" />
        <activity
            android:name=".View_Laws_Activity"
            android:label="View Laws"
            android:parentActivityName=".NewAccountActivity" />
        <activity
            android:name=".ForgetPasswordActivity"
            android:label="Reset Password"
            android:parentActivityName=".LoginActivity" />
        <activity
            android:name=".UpdateLawsActivity"
            android:label="Update Laws"
            android:parentActivityName=".HomeActivity" />
        <activity
            android:name=".FeedbackActivity"
            android:label="Feedback"
            android:parentActivityName=".HomeActivity" />
        <activity
            android:name=".ProfileActivity"
            android:label="Profile"
            android:parentActivityName=".HomeActivity" />
        <activity android:name=".Law1" />
        <activity android:name=".Chapter2" />
        <activity android:name=".Chapter3" />
        <activity android:name=".Chapter4" />
        <activity android:name=".Chapter5" />
        <activity android:name=".Chapter4a"></activity>
    </application>

</manifest>